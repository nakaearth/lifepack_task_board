<div class="login_form">
<%= form_for @login_form, :url=>{:controller=>'sessions',:action=>'create'},:html=>{:method =>:post} do |f| %>
 
 <div class="field">
    <%= f.label :name, 'ユーザ名' %>：<br />
    <%= f.text_field :name %>
 </div><br>
 <div class="field">
    <%= f.label :password, 'パスワード' %>：<br />
    <%= f.password_field :password %>
 </div><br>
   <div class="actions">
    <%= f.submit 'ログイン'%>
  </div>
<% end %>
<br>
<%= link_to '新規登録',  :controller =>'users', :action => 'new' %>
</div>