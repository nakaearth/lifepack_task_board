<!DOCTYPE html>
<html>
<head>
  <title>PineJuice:タスクレコーダ</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
 <% if request.mobile? %>
  <%= render 'common/header_mobile' %>
  <%= render 'common/menu_mobile' %>
<%else %>
  <%= render 'common/header' %>
  <%= render 'common/menu' %>
<% end %>

<%= yield %>

<% if request.mobile? %>
  <%= render 'common/footer_mobile' %>
<% else %>
  <%= render 'common/footer' %>
<% end %>
</body>
</html>
